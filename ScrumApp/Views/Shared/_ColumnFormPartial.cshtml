@model ScrumApp.Models.BoardColumn

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input placeholder="Story Name" asp-for="BoardColumnName" class="form-control" />
                <span asp-validation-for="BoardColumnName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a style="cursor:pointer;color:white;" id="close_form_@Model.BoardColumnId" class="btn btn-danger">X</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
